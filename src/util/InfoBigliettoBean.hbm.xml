<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="util.InfoBigliettoBean" table="biglietto">
        <!-- Identificatore. -->
        <id name="codicevolo" column="codicevolo"/>
        <!-- Proprieta'. -->
        <property name="partenza" column="partenza" not-null="true"/>    
        <property name="arrivo" column="arrivo" not-null="true"/>
        <property name="datapartenza" column="datapartenza" not-null="true"/>
        <property name="dataemissione" column="dataemissione" not-null="true"/>
    	<property name="orapartenza" column="orapartenza" not-null="true"/>
    	<property name="prezzo" column="prezzo" not-null="true"/>
    
    </class>
</hibernate-mapping>