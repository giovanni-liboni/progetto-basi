<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="bean.Prenotazione" table="prenotazione" schema="public">
        <id name="id" type="int">
            <column name="id" />
            <generator class="assigned" />
        </id>
        <many-to-one name="volo" class="bean.Volo" fetch="select">
            <column name="codicevolo" length="10" not-null="true" />
        </many-to-one>
        <many-to-one name="passeggero" class="bean.Passeggero" fetch="select">
            <column name="documento" length="50" not-null="true" />
        </many-to-one>
        <property name="datarichiesta" type="date">
            <column name="datarichiesta" length="13" />
        </property>
        <property name="orarichiesta" type="time">
            <column name="orarichiesta" length="15" />
        </property>
        <set name="bigliettos" table="biglietto" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="id_prenotazione" not-null="true" />
            </key>
            <one-to-many class="bean.Biglietto" />
        </set>
    </class>
</hibernate-mapping>
