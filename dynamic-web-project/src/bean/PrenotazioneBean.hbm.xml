<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="bean.PrenotazioneBean" table="prenotazione">
        <!-- Identificatore. -->
        <id name="id" column="id"/>
        <!-- Proprieta'. -->
        <property name="datarichiesta" column="datarichiesta" not-null="true"/>
        <property name="orarichiesta" column="orarichiesta" not-null="true"/>
        <many-to-one name="codicevolo" not-null="true" class="bean.CodiceVoloBean"/>
        <many-to-one name="documento" not-null="true" class="bean.PasseggeroBean"/>
    </class>	
</hibernate-mapping>