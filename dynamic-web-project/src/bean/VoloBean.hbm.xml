<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="bean.VoloBean" table="volo">
        <!-- Identificatore. -->
        <id name="codicevolo" column="codicevolo"/>
        
        <!-- Proprieta'. -->
        <set name="tratta" table="tratta" lazy="true" cascade="all">
            <key column="partenza" not-null="true"/>
            <key column="arrivo" not-null="true"/>
            <many-to-one class="bean.TrattaBean"/>
        </set>
        <property name="datapartenza" column="datapartenza" not-null="true"/>
        <property name="tipoaereo" column="tipoaereo" not-null="true"/>
    	<property name="orapartenza" column="orapartenza" not-null="true"/>
    	<property name="durata" column="durata" not-null="true"/>
    	<property name="distanza" column="distanza" not-null="true"/>
    	<property name="capienza" column="capienza" not-null="true"/>
    </class>
</hibernate-mapping>